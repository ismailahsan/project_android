<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bg_rvborder4">
        </ImageView>

        <TextView
            android:id="@+id/noAntrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:textColor="@color/textColorPrimary"
            android:text="Nomor Antrian Sekarang"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/noAntrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:textColor="@color/textColorPrimary"
            android:text="00"
            android:textSize="90dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/noAntrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:textColor="@color/textColorPrimary"
            android:text="Nomor Antrian yang akan anda dapatkan : 00"
            android:textSize="15dp"
            android:gravity="center"/>

    </RelativeLayout>

    <Button
        android:layout_marginTop="30dp"
        android:onClick="mengantri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:text="Mengantri"
        android:background="@drawable/bg_rvborder4"/>

</LinearLayout>