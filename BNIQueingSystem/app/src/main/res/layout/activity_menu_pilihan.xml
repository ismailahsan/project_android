<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu_pilihan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context="ex.mcliam.bniqueingsystem.MenuPilihan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <View
            android:layout_width="290dp"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:background="#7b000000">

        </View>

        <ImageView
            android:id="@+id/logobni"
            android:layout_marginTop="45dp"
            android:layout_width="260dp"
            android:layout_height="90dp"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/bniqs"/>

        <TextView
            android:id="@+id/teks1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logobni"
            android:text="Memberikan Pelayanan Antrian Bank,"
            android:textColor="@color/textColorPrimary"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/teks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dan Informasi Layanan Tiap Cabang"
            android:layout_below="@+id/teks1"
            android:textColor="@color/textColorPrimary"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="untuk Kemudahan Transaksi Nasabah"
            android:layout_below="@+id/teks2"
            android:layout_marginLeft="20dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="15dp"/>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:onClick="mengantri"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/location"
                android:text="Mengantri"
                android:textColor="@color/textColorPrimary"
                android:background="@android:color/transparent"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/infoLayanan"
                android:onClick="infoLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:drawableTop="@drawable/info_layanan"
                android:text="Info Layanan"
                android:textColor="@color/textColorPrimary"
                android:textSize="20dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>


</LinearLayout>
